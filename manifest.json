{
    "manifest_version": 3,
    "name": "Calendify",
    "version": "1.0",
    "description": "Capture event details and add to Google Calendar",
    "permissions": [
      "activeTab",
      "storage",
      "identity",
      "tabs"
    ],
    "host_permissions": [
      "https://www.googleapis.com/"
    ],
    "action": {
      "default_popup": "popup/popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content-scripts/content.js"]
      }
    ]
  }