{
  "manifest_version": 3,
  "name": "Event Screenshotter",
  "version": "1.0",
  "description": "Capture event details and add to Google Calendar",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {},
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["libs/*", "cropper/*"],
      "matches": ["<all_urls>"]
    }
  ]
}